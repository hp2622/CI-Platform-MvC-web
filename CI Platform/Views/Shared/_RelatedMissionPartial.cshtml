@{
    //Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/landingpage.css">

</head>

<body>
    @*@Html.Partial("_Partialdummy")*@
    <div class="">
        <hr />
        <h3 class="m-5" style="text-align: center">
            Related Mission
        </h3>
        <div class="container">
            <div id="products" class="row view-group">
                @if (ViewBag.relatedmission == null)
                {
                         <p class="d-flex">
                        There is no related Missions Found
                        </p>
                   
                }
                else
                {
                @foreach (var item in ViewBag.relatedmission)
                    {
                        <div class="item col-xs-4 col-lg-4">
                            <div class="thumbnail card">
                                <div class="img-event">
                                    <img class="group list-group-image img-fluid" style="width:100%;"
                                 src="~/images/Grow-Trees-On-the-path-to-environment-sustainability.png" alt="" />
                                    <div class="landing-page-top-right"><img src="~/images/pin.png" alt=""> @item.City</div>
                                    <div class="landing-page-bottom-right d-flex flex-column">
                                        <button class="mb-2 landing-page-btn-img">
                                            <img src="~/images/heart.png" alt="" class="fav">
                                        </button><button class="landing-page-btn-img">
                                            <img src="~/images/user.png"
                                         alt="">
                                        </button>
                                    </div>

                                    <div class="landing-page-bottom-center">@item.Theme</div>
                                </div>
                                <div class="caption card-body">
                                    <h4 class="group card-title inner list-group-item-heading">
                                        @item.SingleTitle
                                    </h4>
                                    <p class="group inner landing-page-list-group-item-text">
                                        @item.Description
                                    </p>
                                    <div class="d-flex justify-content-between landing-page-card-rating">
                                        <div>@item.Organization</div>
                                        <div>
                                            <img src="~/images/selected-star.png" alt="">
                                            <img src="~/images/selected-star.png" alt="">
                                            <img src="~/images/selected-star.png" alt="">
                                            <img src="~/images/star.png" alt="">
                                            <img src="~/images/star.png" alt="">
                                        </div>
                                    </div>
                                    @if (item.missionType == "1")
                                    {
                                        <div class="rule d-flex mt-1">
                                            <hr>
                                            <button class="date-btn mt-1">@item.GoalText</button>
                                            @*<button class="date-btn mt-1">@ViewBag.goalmissiontxt</button>*@
                                            <hr>
                                        </div>
                                        <div class="row landing-page-box-border">

                                            <div class="col-6 col-md-6 d-flex align-items-center">
                                                <p class="lead me-2 pt-2">
                                                    <img src="~/images/Seats-left.png" alt="">
                                                    <div>
                                                        <div>10</div>
                                                        <div class="landing-page-card-vol-small">Seats Left</div>
                                                    </div>
                                                </p>
                                            </div>
                                            <div class="col-6 col-md-6 d-flex align-items-center">
                                                <p class="lead me-2 pt-2">
                                                    <img src="~/images/achieved.png" alt="">
                                                    <div style="width: 100%;">
                                                        <div>

                                                            <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25"
                                                     aria-valuemin="0" aria-valuemax="100" style="height: 10px;">
                                                                <div class="progress-bar bg-success" style="width: 80%;"></div>
                                                            </div>

                                                        </div>
                                                        <div class="landing-page-card-vol-small">8000 achived</div>
                                                    </div>
                                                </p>
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="rule d-flex mt-1">
                                            <hr>
                                            <button class="date-btn mt-1">From @item.StartDate?.ToString("dd-mm-yyyy") Until @item.EndDate?.ToString("dd-mm-yyyy")</button>
                                            <hr>
                                        </div>
                                        <div class="row landing-page-box-border">
                                            <div class="col-6 col-md-6 d-flex align-items-center">
                                                <p class="lead me-2 pt-2">
                                                    <img src="~/images/Seats-left.png" alt="">
                                                    <div>
                                                        <div>10</div>
                                                        <div class="landing-page-card-vol-small">Seats Left</div>
                                                    </div>
                                                </p>
                                            </div>
                                            <div class="col-6 col-md-6 d-flex align-items-center">
                                                <p class="lead me-2 pt-2">
                                                    <img src="~/images/deadline.png" alt="">
                                                    <div>
                                                        <div>09/01/2023</div>
                                                        <div class="landing-page-card-vol-small">Deadline</div>
                                                    </div>
                                                </p>
                                            </div>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-center">
                                        <div class="">
                                            <a class="btn mt-2 landing-page-apply-mission-btn" href="/Home/SingleMission?MissionId=@item.MissionId">
                                                Apply <img src="~/images/right-arrow.png" alt="">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                        

                }

              


            </div>
        </div>

        <div class="d-flex justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item "><a class="page-link page-item-current" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</body>

</html>
